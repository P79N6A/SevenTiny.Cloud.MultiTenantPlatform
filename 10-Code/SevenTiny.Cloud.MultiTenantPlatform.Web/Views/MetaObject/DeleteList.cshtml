@using SevenTiny.Cloud.MultiTenantPlatform.DomainModel.Entities
@using SevenTiny.Cloud.MultiTenantPlatform.DomainModel.Enums

@{
    ViewData["Title"] = "DeleteList";
    Layout = $"~/Views/Shared/_Layout.cshtml";
}
@{
    List<MetaObject> metaObjects = (Model as List<MetaObject>) ?? new List<MetaObject>();
}

<nav class="breadcrumb">
    <i class="Hui-iconfont">&#xe67f;</i> 首页
    <span class="c-gray en">&gt;</span>
    对象管理
    <span class="c-gray en">&gt;</span>
    已删除对象列表
    <a class="btn btn-success radius r" style="line-height:1.6em;margin-top:3px" href="javascript:location.replace(location.href);" title="刷新"><i class="Hui-iconfont">&#xe68f;</i></a>
</nav>

<div class="Hui-article">
    <article class="cl pd-20">
        <div class="cl pd-5 bg-1 bk-gray">
            <span class="l">
                <a class="btn btn-secondary-outline radius" href="javascript:history.back(-1);"><i class="Hui-iconfont">&#xe66b;</i> 返回</a>
            </span>
            <span class="r">共有数据：<strong>@metaObjects?.Count</strong> 条</span>
        </div>
        <div class="mt-20">
            <table class="table table-border table-bordered table-bg table-hover table-sort table-responsive">
                <thead>
                    <tr class="text-c">
                        <th width="40">ID</th>
                        <th width="80">名称</th>
                        <th width="80">编码</th>
                        <th width="160">描述</th>
                        <th width="30">排序</th>
                        <th width="35">状态</th>
                        <th width="50">操作</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in metaObjects)
                    {
                        <tr class="text-c">
                            <td>@item.Id</td>
                            <td><a href="/MetaObject/Switch/@item.Id" class="text-primary" title="切换对象">@item.Name</a></td>
                            <td>@item.Code</td>
                            <td>@item.Description</td>
                            <td>@item.SortNumber</td>
                            <td class="td-status"><span class="label label-danger radius">已删除</span></td>
                            <td class="f-14 td-manage">
                                <a style="text-decoration: none" href="javascript:;" onClick="member_huanyuan(this, @item.Id)" title="还原"><i class="Hui-iconfont">&#xe66b;</i></a>
                                <a style="text-decoration: none" class="ml-5" onClick="article_del(this, @item.Id)" href="javascript:;" title="删除"><i class="Hui-iconfont">&#xe6e2;</i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </article>
</div>

@Html.Partial($"~/Views/Shared/_FooterScripts.cshtml")
<!--请在下方写此页面业务相关的脚本-->
<script type="text/javascript" src="~/lib/My97DatePicker/4.8/WdatePicker.js"></script>
<script type="text/javascript" src="~/lib/datatables/1.10.0/jquery.dataTables.min.js"></script>
<script type="text/javascript" src="~/lib/laypage/1.2/laypage.js"></script>
<script type="text/javascript">
    $('.table-sort').dataTable({
        "aLengthMenu": [[30, 50, 100, -1], ["30", "50", "100", "All"]],//二组数组，第一组数量，
        "aaSorting": [[4, "asc"], [0, "asc"]],//默认第几个排序
        "bStateSave": true,//状态保存
        "aoColumnDefs": [
            //{"bVisible": false, "aTargets": [ 3 ]} //控制列的隐藏显示
            { "orderable": false, "aTargets": [6] }// 不参与排序的列
        ]
    });

    /*删除*/
    function article_del(obj, id) {
        layer.confirm('确认要删除吗？该操作不可逆,对象下的所有字段会被清空！', function (index) {
            $.ajax({
                type: 'POST',
                url: '/MetaObject/Delete/' + id,
                dataType: 'json',
                success: function (data) {
                    $(obj).parents("tr").remove();
                    layer.msg('已删除!', { icon: 1, time: 1000 });
                },
                error: function (data) {
                    console.log(data.msg);
                },
            });
        });
    }
    /*还原*/
    function member_huanyuan(obj, id) {
        layer.confirm('确认要还原吗？', function (index) {
            $.ajax({
                type: 'POST',
                url: '/MetaObject/Recover/' + id,
                dataType: 'json',
                success: function (data) {
                    $(obj).parents("tr").remove();
                    layer.msg('已还原!', { icon: 1, time: 1000 });
                },
                error: function (data) {
                    console.log(data.msg);
                }
            });
        });
    }
</script>
<!--/请在上方写此页面业务相关的脚本-->