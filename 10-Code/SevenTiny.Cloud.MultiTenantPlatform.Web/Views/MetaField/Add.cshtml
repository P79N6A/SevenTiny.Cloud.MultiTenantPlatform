<script type="text/javascript">
    $(function () {
        $('.skin-minimal input').iCheck({
            checkboxClass: 'icheckbox-blue',
            radioClass: 'iradio-blue',
            increaseArea: '20%'
        });
    });
    function fieldTypeSwitch(obj) {
        if ($(obj).val() == "DataSource") {
            console.log(1);
            $("#div_datasource").show();
        } else {
            $("#div_datasource").hide();
        }
    }
</script>
