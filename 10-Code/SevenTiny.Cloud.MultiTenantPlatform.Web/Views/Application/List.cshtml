@using SevenTiny.Cloud.MultiTenantPlatform.Domain.Entity;
@{
    Layout = "_LayoutHeaderStyle";
    ViewData["Title"] = "List";
}
@{
    List<Application> applications = Model as List<Application>;
}

<nav class="breadcrumb">
    <i class="Hui-iconfont">&#xe67f;</i> 首页
    <span class="c-gray en">&gt;</span>
    应用管理
    <span class="c-gray en">&gt;</span>
    应用列表
    <a class="btn btn-success radius r" style="line-height:1.6em;margin-top:3px" href="javascript:location.replace(location.href);" title="刷新"><i class="Hui-iconfont">&#xe68f;</i></a>
</nav>

<article class="cl pd-20">
    <div class="cl pd-5 bg-1 bk-gray">
        <span class="l">
            <a class="btn btn-primary radius" href="/Application/Add"><i class="Hui-iconfont">&#xe600;</i> 添加应用</a>
            <a class="btn btn-danger-outline radius" href="/Application/DeleteList"><i class="Hui-iconfont">&#xe609;</i> 查看已删除应用</a>
        </span>
        <span class="r">共有数据：<strong>@applications.Count</strong> 条</span>
    </div>
    <div class="mt-20">
        <table class="table table-border table-bordered table-bg table-hover table-sort table-responsive">
            <thead>
                <tr class="text-c">
                    <th width="40">ID</th>
                    <th width="80">名称</th>
                    <th width="80">编码</th>
                    <th width="160">描述</th>
                    <th width="30">排序</th>
                    <th width="35">状态</th>
                    <th width="50">操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in applications)
                {
                    <tr class="text-c">
                        <td>@item.Id</td>
                        <td><a href="javascript:window.parent.location.href='/Application/Detail?App=@item.Code';" class="text-primary" title="切换应用">@item.Name</a></td>
                        <td>@item.Code</td>
                        <td>@item.Description</td>
                        <td>@item.SortNumber</td>
                        <td class="td-status"><span class="label label-success radius">发布</span></td>
                        <td class="f-14 td-manage">
                            <a style="text-decoration: none" class="ml-5" href="/Application/Update/@item.Id" title="编辑"><i class="Hui-iconfont">&#xe6df;</i></a>
                            <a style="text-decoration: none" class="ml-5" onClick="article_del(this, @item.Id)" href="javascript:;" title="删除"><i class="Hui-iconfont">&#xe6e2;</i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <br />
</article>

@await Html.PartialAsync($"~/Views/Shared/_FooterScripts.cshtml")
<!--请在下方写此页面业务相关的脚本-->
<script type="text/javascript" src="~/lib/My97DatePicker/4.8/WdatePicker.js"></script>
<script type="text/javascript" src="~/lib/datatables/1.10.0/jquery.dataTables.min.js"></script>
<script type="text/javascript" src="~/lib/laypage/1.2/laypage.js"></script>
<script type="text/javascript">
    $('.table-sort').dataTable({
        "aLengthMenu": [[30, 50, 100, -1], ["30", "50", "100", "All"]],//二组数组，第一组数量
        "aaSorting": [[4, "asc"], [0, "asc"]],//默认第几个排序
        "bStateSave": true,//状态保存
        "aoColumnDefs": [
            //{"bVisible": false, "aTargets": [ 3 ]} //控制列的隐藏显示
            { "orderable": false, "aTargets": [6] }// 不参与排序的列
        ]
    });

    function article_del(obj, id) {
        layer.confirm('确认要删除吗？', function (index) {
            $.ajax({
                type: 'POST',
                url: '/Application/LogicDelete/' + id,
                dataType: 'json',
                success: function (data) {
                    $(obj).parents("tr").remove();
                    layer.msg('已删除!', { icon: 1, time: 1000 });
                },
                error: function (data) {
                    console.log(data.msg);
                }
            });
        });
    }
</script>
<!--/请在上方写此页面业务相关的脚本-->