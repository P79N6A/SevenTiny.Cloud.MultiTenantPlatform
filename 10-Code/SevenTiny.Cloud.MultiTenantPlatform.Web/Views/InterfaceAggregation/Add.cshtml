@*@using SevenTiny.Cloud.MultiTenantPlatform.Domain.Entity;
@using SevenTiny.Cloud.MultiTenantPlatform.Domain.Enum;
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<InterfaceField> interfaceFields = ViewData["InterfaceFields"] as List<InterfaceField> ?? new List<InterfaceField>();
    List<InterfaceSearchCondition> searchConditions = ViewData["SearchConditions"] as List<InterfaceSearchCondition> ?? new List<InterfaceSearchCondition>();
    ActionResultModel<InterfaceAggregation> result = Model as ActionResultModel<InterfaceAggregation> ?? new ActionResultModel<InterfaceAggregation>(true, string.Empty, new InterfaceAggregation());
}
<nav class="breadcrumb">
    <i class="Hui-iconfont">&#xe67f;</i> 首页
    <span class="c-gray en">&gt;</span>
    标准接口
    <span class="c-gray en">&gt;</span>
    组织接口
    <span class="c-gray en">&gt;</span>
    新建
    <a class="btn btn-success radius r" style="line-height:1.6em;margin-top:3px" href="javascript:location.replace(location.href);" title="刷新"><i class="Hui-iconfont">&#xe68f;</i></a>
</nav>

<article class="page-container">
    <form class="form form-horizontal" id="form-article-add" method="post" action="/InterfaceAggregation/AddLogic">
        <div class="row cl">
            <label class="form-label col-xs-4 col-sm-2"><span class="c-red">*</span>名称：</label>
            <div class="formControls col-xs-8 col-sm-9">
                <input type="text" class="input-text" value="@result.Data.Name" placeholder="" id="" name="name">
            </div>
        </div>
        <div class="row cl">
            <label class="form-label col-xs-4 col-sm-2"><span class="c-red">*</span>编码：</label>
            <div class="formControls col-xs-8 col-sm-9">
                <input type="text" class="input-text" value="@result.Data.Code" placeholder="" id="" name="code">
            </div>
        </div>
        <div class="row cl">
            <label class="form-label col-xs-4 col-sm-2"><span class="c-red">*</span>接口类型：</label>
            <div class="formControls col-xs-8 col-sm-9">
                <span class="select-box">
                    <select name="interfaceType" class="select" value="@result.Data.InterfaceType" onchange="fieldTypeSwitch(this)">
                        @foreach (var item in Enum.GetValues(typeof(InterfaceType)))
                        {
                            var value = (int)item;
                            <option value="@value">@EnumsTranslater.Tran_InterfaceType(value)</option>
                        }
                    </select>
                </span>
            </div>
        </div>

        <div class="row cl">
            <label class="form-label col-xs-4 col-sm-2"><span class="c-red">*</span>字段配置：</label>
            <div class="formControls col-xs-8 col-sm-9">
                <span class="select-box">
                    <select name="interfaceFieldId" class="select" value="@result.Data.InterfaceFieldId" onchange="fieldTypeSwitch(this)">
                        @foreach (var item in interfaceFields)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </span>
            </div>
        </div>
        <div class="row cl">
            <label class="form-label col-xs-4 col-sm-2"><span class="c-red">*</span>搜索条件：</label>
            <div class="formControls col-xs-8 col-sm-9">
                <span class="select-box">
                    <select name="interfaceSearchConditionId" class="select" value="@result.Data.InterfaceSearchConditionId" onchange="fieldTypeSwitch(this)">
                        @foreach (var item in searchConditions)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </span>
            </div>
        </div>
        <div class="row cl">
            <label class="form-label col-xs-4 col-sm-2">分组：</label>
            <div class="formControls col-xs-8 col-sm-9">
                <input type="text" class="input-text" value="@result.Data.Group" placeholder="" id="" name="group">
            </div>
        </div>
        <div class="row cl">
            <label class="form-label col-xs-4 col-sm-2">排序值：</label>
            <div class="formControls col-xs-8 col-sm-9">
                <input type="text" class="input-text" value="@result.Data.SortNumber" placeholder="" id="" name="sortNumber">
            </div>
        </div>
        <div class="row cl">
            <label class="form-label col-xs-4 col-sm-2">描述：</label>
            <div class="formControls col-xs-8 col-sm-9">
                <textarea name="description" class="textarea" placeholder="说点什么...最多输入1000个字符" datatype="*0-1000" dragonfly="true" nullmsg="无备注" onKeyUp="textarealength(this,1000)">@result.Data.Description</textarea>
                <p class="textarea-numberbar"><em class="textarea-length">0</em>/1000</p>
            </div>
        </div>
        <div class="row cl">
            <div class="col-xs-8 col-sm-9 col-xs-offset-4 col-sm-offset-2">
                <input class="btn btn-primary radius" type="submit" value="&nbsp;&nbsp;提交&nbsp;&nbsp;">
                <button onClick="javascript:window.location='/InterfaceAggregation/List';" class="btn btn-default radius" type="button">&nbsp;&nbsp;取消&nbsp;&nbsp;</button>
                @if (!result.IsSuccess)
                {
                    <br /><br /><span class="c-red">@result.Msg</span>
                }
            </div>
        </div>
    </form>
</article>

